<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/resto_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/baseline_restaurant_24"/>
    <TextView
        android:id="@+id/resto_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Restaurant Name"
        android:layout_toRightOf="@id/resto_icon"
        android:layout_alignTop="@id/resto_icon"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/resto_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@id/resto_name_txt"
        android:layout_alignLeft="@id/resto_name_txt"
        android:layout_marginBottom="10dp"
        android:text="Resto Type"/>


</RelativeLayout>